@using Library.ViewModels

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

@model RegisterViewModel

<html>

    <head>
        <link href="~/css/authStyle.css" rel="stylesheet" />

    </head>


    <div asp-validation-summary="All"></div>

    <body>

    <form asp-action="Register" method="post" class="login-form">
        <input asp-for="FirstName" type="text" placeholder="first name" />
        <input asp-for="LastName" type="text" placeholder="last name" />
        <input asp-for="UserName" type="text" placeholder="username" />
        <input asp-for="Email" type="text" placeholder="email" />
        <input asp-for="Password" type="password" placeholder="password" />
        <button type="submit">Register</button>
        <p class="message">Already registered! <a asp-action="Login">Login</a></p>
    </form>

    </body>
</html>
